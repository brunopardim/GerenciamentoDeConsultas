<controls:MetroWindow
        x:Class="ProjetoIntegrado.View.SplashInicial.SplashInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoIntegrado.View.SplashInicial"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
     
        Style="{StaticResource WindowNone}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Height="280" 
        Background="#fafafa"
        Width="450" 
        Loaded="MetroWindow_Loaded">
    <Grid>
        <Grid Grid.Row="0" Margin="20, 20, 20, 90">
            <Label  Width="400" Height="170" FontWeight="Bold">IMAGEM 400X170</Label>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,211,0,0">
            <TextBlock x:Name="lbStatus" Margin="25, 0, 25, 0">Verificando se a base de dados existe...</TextBlock>
            <ProgressBar IsIndeterminate="True" Margin="25" Height="15" />
        </Grid>
    
    </Grid>
</controls:MetroWindow>
