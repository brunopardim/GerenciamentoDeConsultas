<controls:MetroWindow 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
        x:Class="ProjetoIntegrado.View.FluxoDeCaixa.LancarSaidaWin"
        xmlns:local="clr-namespace:ProjetoIntegrado.View.FluxoDeCaixa"
        
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"  
        
        mc:Ignorable="d"
        
        Style="{StaticResource WindowSimples}"
        WindowStartupLocation="CenterScreen"
    
        Title="LANÇAR SAÍDA" 
        Height="169" 
        Width="406.25"
        KeyDown="MetroWindow_KeyDown"
 >
    <Grid>

        <TextBox x:Name="tbDescricao" x:Uid="Descricao" TabIndex="0" Tag="*" HorizontalAlignment="Left" TextAlignment="Left" Height="38" Width="259" Margin="21,22,0,0" TextWrapping="Wrap"      CharacterCasing="Upper" materialDesignMahApps:HintAssist.Hint="DESCRIÇÃO" Style="{StaticResource MaterialDesignFloatingHintTextBox}"    VerticalAlignment="Top"  />
        <TextBox x:Name="tbValor"      x:Uid="Valor" TabIndex="0" Tag="*" HorizontalAlignment="Left" TextAlignment="Center" Height="38" Width="80" Margin="300,22,0,0" TextWrapping="Wrap"      CharacterCasing="Upper" materialDesignMahApps:HintAssist.Hint="VALOR" Style="{StaticResource MaterialDesignFloatingHintTextBox}"    VerticalAlignment="Top"  />
        <Button x:Name="BtnSalvar"   Click="BtnSalvar_OnClick" TabIndex="22" Content="Salvar" Height="34"  Margin="123,85,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="122"/>
        <Button x:Name="BtnCancelar" Click="BtnCancelar_OnClick" TabIndex="23" Content="Cancelar" Height="34" Margin="256,85,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="124"/>

    </Grid>
</controls:MetroWindow>
